<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".fragment.RopeCalorieBurnedFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/goBackImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="15dp"
                android:background="@color/gray"
                android:importantForAccessibility="no"
                android:src="@drawable/calculators_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_gray"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/revolutiongothic_extra_bold"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:text="@string/jumping_rope_calculator"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/infoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@color/gray"
                android:importantForAccessibility="no"
                android:src="@drawable/icon_info" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/line"
            android:backgroundTint="@color/light_gray" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/weightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/revolutiongothic_light"
            android:hint="@string/weight_in_kg"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingBottom="28dp"
            android:textColor="@color/white"
            android:textColorHint="@color/silver"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/falseWeightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/revolutiongothic_extra_bold"
            android:text="@string/invalid_weight_must_be_lower_than_and_500"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/hoursEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/revolutiongothic_light"
                android:hint="@string/hours"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingBottom="28dp"
                android:textColor="@color/white"
                android:textColorHint="@color/silver"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/minutesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/revolutiongothic_light"
                android:hint="@string/minutes"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingBottom="28dp"
                android:textColor="@color/white"
                android:textColorHint="@color/silver"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_gravity="start"
                android:fontFamily="@font/revolutiongothic_extra_bold"
                android:padding="10dp"
                android:text="@string/type_of_activity"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/revolutiongothic_extra_bold"
                android:padding="10dp"
                android:text="@string/met"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="77dp"
                android:layout_column="3"
                android:layout_gravity="end"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/revolutiongothic_extra_bold"
                android:padding="10dp"
                android:text="@string/burned"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_gravity="start"
                android:padding="10dp"
                android:text="@string/slow_pace_10_lt_100_skips_min_10_2_foot_skip_10_rhythm_bounce"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="8.8" />

            <TextView
                android:id="@+id/slowPaceBurned"
                android:layout_column="3"
                android:layout_gravity="center|end"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                tools:text="NaN" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_gravity="start"
                android:padding="10dp"
                android:text="@string/moderate_pace_10_100_120_skips_min_10_2_foot_skip_10_plain_bounce"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                tools:text="11.8"
                tools:textSize="20sp" />

            <TextView
                android:id="@+id/moderatePaceBurned"
                android:layout_column="3"
                android:layout_gravity="center|end"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                tools:text="NaN" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_gravity="start|center"
                android:padding="10dp"
                android:text="@string/rope_skipping_general"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="12.3" />


            <TextView
                android:id="@+id/generalBurned"
                android:layout_column="3"
                android:layout_gravity="center|end"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                tools:text="NaN" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_gravity="start|center"
                android:padding="10dp"
                android:text="@string/fast_pace_10_120_160_skips_min"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="12.3" />


            <TextView
                android:id="@+id/fastPaceBurned"
                android:layout_column="3"
                android:layout_gravity="center|end"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                tools:text="NaN" />

        </TableRow>

    </TableLayout>


</LinearLayout>